@{
    ViewData["Title"] = "登入";
}

<h2 class="text-center">登入</h2>



<form method="post" class="mt-4">
    <div class="mb-3">
        <label for="userName" class="form-label">用戶名</label>
        <input type="text" name="userName" id="userName" class="form-control" placeholder="請輸入用戶名" required />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">密碼</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="請輸入密碼" required />
    </div>

    <!-- 顯示錯誤訊息 -->
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <p class="text-danger">@ViewData["ErrorMessage"]</p>
    }

    <button type="submit" class="btn btn-primary w-100">登入</button>
</form>

<p class="mt-3 text-center">還沒有帳號？<a href="/Account/Register">註冊</a></p>
