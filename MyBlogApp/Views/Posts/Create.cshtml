@model MyBlogApp.Models.Post

@{
    ViewData["Title"] = "新增文章";
}

<h2>新增文章</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">標題</label>
        <input type="text" name="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Content">內容</label>
        <textarea name="Content" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label for="CategoryId">分類</label>
        <select name="CategoryId" class="form-control" required>
            <option value="">請選擇分類</option>
            @foreach (var category in ViewBag.Categories as SelectList)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">新增文章</button>
    <a asp-action="Index" class="btn btn-secondary   mt-3">返回列表</a>

</form>
