@model IEnumerable<MyBlogApp.Models.Post>

@{
    ViewData["Title"] = "文章列表";
}

<h2 class="mb-4">文章列表</h2>
<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="search" class="form-control" placeholder="搜尋標題..." />
</form>
<a class="btn btn-primary mb-3" asp-controller="Categories" asp-action="Index">分類管理</a>


<a asp-action="Create" class="btn btn-primary mb-3">新增文章</a>

<table class="table table-striped table-bordered">
    <thead>

        <tr>
            <th>標題</th>
            <th>分類</th>
            <th>建立時間</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category?.Name</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">詳細</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">編輯</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除這篇文章嗎？');">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
