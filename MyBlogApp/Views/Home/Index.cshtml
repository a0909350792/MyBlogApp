@model IEnumerable<MyBlogApp.Models.Post>

@{
    ViewData["Title"] = "我的部落格";
}

<div class="container mt-4">

    <h1 class="mb-4 text-center">我的部落格</h1>

    <!-- 搜尋與分類篩選 -->
    <form asp-action="Index" method="get" class="row mb-4">
        <div class="col-md-8 mb-2">
            <input type="text" name="search" class="form-control" placeholder="搜尋文章..." value="@ViewBag.Search" />
        </div>
        <div class="col-md-3 mb-2">
            <select name="categoryId" class="form-select">
                <option value="">所有分類</option>
                @foreach (var category in ViewBag.Categories as List<MyBlogApp.Models.Category>)
                {
                    <option value="@category.Id" @@(ViewBag.CategoryId == category.Id ? "selected" : "")>@category.Name</option>
                }
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">搜尋</button>
        </div>
    </form>

    <!-- 文章列表 -->
    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var post in Model)
            {
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="list-group-item list-group-item-action mb-3">
                    <h4>@post.Title</h4>
                    <p class="text-muted">
                        分類：@post.Category.Name ｜ 發佈時間：@post.CreatedAt.ToString("yyyy-MM-dd")
                    </p>
                    <p>@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            找不到任何文章。
        </div>
    }
</div>
